<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/cardview_default_elevation"
    tools:context=".MainActivity"
    android:background="@drawable/background1">


    <!-- Email Label -->

    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/rounded_button2"
        android:gravity="center|center_horizontal|center_vertical"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.602"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/memcode"
        android:layout_width="120dp"
        android:layout_height="26dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_baseline_verified_user_24"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/aspergit"
        android:gravity="center|left"
        android:hint="MEMCODE"
        android:paddingBottom="2sp"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/location"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <EditText
        android:id="@+id/result"
        android:layout_width="358dp"
        android:layout_height="66dp"
        android:background="@drawable/rounded_edittext"
        android:capitalize="words"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/bubble"
        android:gravity="center|center_horizontal|center_vertical"

        android:hint=""
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />

    <EditText
        android:id="@+id/datetime"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/aspergit"
        android:hint="DATE AND TIME"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center|left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/memcode"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <Button
        android:id="@+id/button"
        android:layout_width="165dp"
        android:layout_height="59dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/alfa_slab_one"
        android:foreground="@drawable/qrcodes"
        android:paddingBottom="3dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/status"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/location"
        android:layout_width="165dp"
        android:layout_height="31dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/primer"
        android:textAllCaps="false"
        android:textColor="#0C5531"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/primer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/stat"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/primer"
        android:gravity="center"
        android:text="Recent Location:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/aspergit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325" />

    <ImageButton
        android:id="@+id/btnFetch"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/location_history_icon"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:layout_constraintVertical_bias="0.127"
        app:srcCompat="@color/zxing_transparent"
        tools:ignore="VectorDrawableCompat" />

    <ListView
        android:id="@+id/listlogs"
        style="@style/Widget.AppCompat.Light.ListView.DropDown"
        android:layout_width="368dp"
        android:layout_height="117dp"
        android:background="@drawable/outlines"
        android:cacheColorHint="@android:color/transparent"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/division"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_baseline_folder_shared_24"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/aspergit"
        android:inputType="textPersonName"
        android:shadowColor="@color/cardview_dark_background"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="10sp"
        android:gravity="center|left"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/datetime"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/memcode"
        app:layout_constraintVertical_bias="0.074" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/gender"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="@font/aspergit"
        android:inputType="textPersonName"
        android:lineSpacingExtra="2sp"
        android:shadowColor="@color/cardview_dark_background"
        android:text="Gender"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center|left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/division"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />

    <ImageView
        android:id="@+id/sex"
        android:layout_width="183dp"
        android:layout_height="162dp"
        android:background="@drawable/outlines"
        android:cropToPadding="true"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/outlines_bot"
        android:text="Date/Time"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/listlogs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/listlogs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outlines_bot"
        android:text="Location"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/listlogs"
        app:layout_constraintEnd_toEndOf="@+id/listlogs"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"

        android:background="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/stat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/datetime"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:layout_constraintVertical_bias="0.535" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="48dp"
        android:layout_height="35dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/primer"
        android:text="History Logs"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/listlogs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFetch"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:drawableBottom="@android:drawable/arrow_down_float"
        android:text="Upload Picture"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sex"
        app:layout_constraintEnd_toEndOf="@+id/sex"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/sex"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/times"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/eq"
        android:enabled="false"

        android:fontFamily="@font/aspergit"
        android:gravity="center|left"
        android:inputType="textPersonName"
        android:lineSpacingExtra="2sp"
        android:text="Log_date"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="@+id/gender"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        app:layout_constraintVertical_bias="0.311" />


</androidx.constraintlayout.widget.ConstraintLayout>